<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Projet_Final.EmployeModule.DetailEmploye"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Projet_Final.EmployeModule"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="1" FontWeight="Bold" FontSize="25" HorizontalTextAlignment="Center" Margin="30 30 0 0">Detail d'un employe</TextBlock>
        <TextBlock x:Name="tbNom"  Foreground="Red"  Grid.Row="1" Grid.Column="1"  FontSize="12" Margin="0 10 0 0"></TextBlock>

        <Button x:Name="modifierEmployer">Modifier</Button>
        <Button x:Name="supprimerEmployer">Supprimer</Button>


    </Grid>

</Page>
